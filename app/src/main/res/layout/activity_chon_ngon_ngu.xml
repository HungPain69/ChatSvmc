<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.TabCaiDat_ThanhPhanCon.ChonNgonNgu">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/id_toolbar_man_hinh_chinh"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#6200EE"
        app:titleTextColor="@color/colortexttitle"
        android:elevation="4dp">
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="!!! Hiện tại app hỗ trợ 2 ngôn ngữ, Các ngôn ngữ mới sẽ được cập nhật sớm nhất có thể."
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginHorizontal="6dp"
        />
    <RadioGroup
        android:id="@+id/id_radiogroup_ngonngu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        >
        <RadioButton
            android:id="@+id/id_radiobutton_tienganh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textSize="18dp"
            android:text="Tiếng Anh"
            >
        </RadioButton>
        <RadioButton
            android:id="@+id/id_radiobutton_tiengviet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="10dp"
            android:textSize="18dp"
            android:text="Tiếng Việt"
            >
        </RadioButton>

    </RadioGroup>
    <Button
        android:id="@+id/id_btn_save_doi_ngonngu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:paddingHorizontal="36dp"
        android:paddingVertical="6dp"
        android:background="@drawable/hieu_ung_nhan_nut_login"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:text="Save"
        android:textSize="20dp"
        />


</LinearLayout>