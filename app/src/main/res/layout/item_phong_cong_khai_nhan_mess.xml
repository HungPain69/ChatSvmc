<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFF"
    >
    <ImageView
        android:id="@+id/id_img_avatar_nhan_mess_cong_khai"
        android:layout_marginTop="10dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF"
        >
        <TextView
            android:id="@+id/id_tv_ten_nguoi_nhan_mess_chat_cong_khai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="6dp"
            android:layout_marginLeft="6dp"
            android:text="Name"
            android:textSize="18dp"

            />
        <TextView
            android:id="@+id/id_tv_nhan_noi_dung_chat_cong_khai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textColor="#000"
            android:textSize="18dp"
            android:paddingVertical="6dp"
            android:background="@drawable/bo_tron_canh_tin_nhan_nhan_ve"
            />
    </LinearLayout>
</LinearLayout>
